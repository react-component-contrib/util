{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib",
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["dom", "ES6"],
    "declaration": true,
    "sourceMap": false,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "typeRoots": ["node_modules/@types", "typings"],
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "jest", "lib"]
}
